@model CookooMVCApp.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = ViewBag.ConstStrings.RegisterHeader;
}

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Association Form</legend>
        <p>
              @ViewBag.ConstStrings.ConfirmNameSuccessfullyDis
               <strong> @ViewBag.ProviderDisplayName</strong>.
              
        </p>
        <p>
            @ViewBag.ConstStrings.EnterNameDis
        </p>
        <ol>
            <li class="name">
                @ViewBag.ConstStrings.UserNameReg
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
             <li class="name">
              
                @ViewBag.ConstStrings.UserNameLan
                @Html.DropDownListFor(m => m.Language, new SelectList(ViewBag.Languages))
                @Html.ValidationMessageFor(m => m.Language)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="@ViewBag.ConstStrings.RegisterHeader" />
    </fieldset>
}

